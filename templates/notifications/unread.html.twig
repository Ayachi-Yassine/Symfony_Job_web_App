{% extends 'base.html.twig' %}

{% block title %}Unread Notifications - Job Portal{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-inbox"></i> Unread Notifications ({{ notifications|length }})
                    </h5>
                </div>
                <div class="card-body">
                    {% if notifications|length > 0 %}
                        <div class="notification-list">
                            {% for notification in notifications %}
                                <div class="notification-item p-3 border-bottom bg-light">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">
                                                <span class="badge bg-primary me-2">New</span>
                                                {{ notification.title }}
                                            </h6>
                                            <p class="mb-2">{{ notification.message }}</p>
                                            <small class="text-secondary">
                                                <i class="fas fa-clock"></i> {{ notification.createdAt|date('M d, Y H:i') }}
                                            </small>
                                        </div>
                                        <div class="btn-group btn-group-sm ms-2">
                                            {% if notification.relatedLink %}
                                                <a href="{{ notification.relatedLink }}" class="btn btn-primary" title="View">
                                                    <i class="fas fa-arrow-right"></i>
                                                </a>
                                            {% endif %}
                                            <form method="POST" action="{{ path('app_notification_mark_read', {'id': notification.id}) }}" class="d-inline">
                                                <button type="submit" class="btn btn-success" title="Mark as read">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                            <form method="POST" action="{{ path('app_notification_delete', {'id': notification.id}) }}" class="d-inline">
                                                <button type="submit" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle"></i> You're all caught up! No unread notifications.
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="mt-4">
                <a href="{{ path('app_notifications') }}" class="btn btn-secondary">
                    <i class="fas fa-envelope"></i> All Notifications
                </a>
                <a href="{{ path('app_profile_view') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
