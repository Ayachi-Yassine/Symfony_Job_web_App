{% extends 'base.html.twig' %}

{% block title %}My Applications - Job Portal{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-file-alt"></i> My Applications
                    </h5>
                    <a href="{{ path('app_jobs_index') }}" class="btn btn-sm btn-light">
                        <i class="fas fa-search"></i> Find Jobs
                    </a>
                </div>
                <div class="card-body">
                    {% if applications|length > 0 %}
                        <!-- Filter Tabs -->
                        <ul class="nav nav-tabs mb-4" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#all">
                                    All ({{ applications|length }})
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#pending">
                                    <span class="badge bg-warning text-dark">Pending</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#accepted">
                                    <span class="badge bg-success">Accepted</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#rejected">
                                    <span class="badge bg-danger">Rejected</span>
                                </a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <!-- All Applications -->
                            <div id="all" class="tab-pane fade show active">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Job Title</th>
                                                <th>Company</th>
                                                <th>Location</th>
                                                <th>Status</th>
                                                <th>Applied</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for app in applications %}
                                                <tr>
                                                    <td><strong>{{ app.job.title }}</strong></td>
                                                    <td>{{ app.job.company }}</td>
                                                    <td>{{ app.job.location ?? 'N/A' }}</td>
                                                    <td>
                                                        {% if app.isPending() %}
                                                            <span class="badge bg-warning text-dark">
                                                                <i class="fas fa-hourglass-half"></i> Pending
                                                            </span>
                                                        {% elseif app.isAccepted() %}
                                                            <span class="badge bg-success">
                                                                <i class="fas fa-check-circle"></i> Accepted
                                                            </span>
                                                        {% elseif app.isRejected() %}
                                                            <span class="badge bg-danger">
                                                                <i class="fas fa-times-circle"></i> Rejected
                                                            </span>
                                                        {% elseif app.isWithdrawn() %}
                                                            <span class="badge bg-secondary">
                                                                <i class="fas fa-ban"></i> Withdrawn
                                                            </span>
                                                        {% endif %}
                                                    </td>
                                                    <td>{{ app.appliedAt|date('M d, Y') }}</td>
                                                    <td>
                                                        <a href="{{ path('app_application_detail', {'id': app.id}) }}" class="btn btn-sm btn-outline-primary" title="View Details">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        {% if not app.isWithdrawn() and app.isPending() %}
                                                            <form method="POST" action="{{ path('app_application_withdraw', {'id': app.id}) }}" class="d-inline">
                                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Withdraw" onclick="return confirm('Are you sure?')">
                                                                    <i class="fas fa-trash"></i>
                                                                </button>
                                                            </form>
                                                        {% endif %}
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Pending Applications -->
                            <div id="pending" class="tab-pane fade">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Job Title</th>
                                                <th>Company</th>
                                                <th>Applied</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% set hasPending = false %}
                                            {% for app in applications %}
                                                {% if app.isPending() %}
                                                    {% set hasPending = true %}
                                                    <tr>
                                                        <td><strong>{{ app.job.title }}</strong></td>
                                                        <td>{{ app.job.company }}</td>
                                                        <td>{{ app.appliedAt|date('M d, Y') }}</td>
                                                        <td>
                                                            <a href="{{ path('app_application_detail', {'id': app.id}) }}" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-eye"></i> View
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                            {% if not hasPending %}
                                                <tr>
                                                    <td colspan="4" class="text-center text-muted">No pending applications</td>
                                                </tr>
                                            {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Accepted Applications -->
                            <div id="accepted" class="tab-pane fade">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Job Title</th>
                                                <th>Company</th>
                                                <th>Reviewed</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% set hasAccepted = false %}
                                            {% for app in applications %}
                                                {% if app.isAccepted() %}
                                                    {% set hasAccepted = true %}
                                                    <tr class="table-success">
                                                        <td><strong>{{ app.job.title }}</strong></td>
                                                        <td>{{ app.job.company }}</td>
                                                        <td>{{ app.reviewedAt|date('M d, Y') }}</td>
                                                        <td>
                                                            <a href="{{ path('app_application_detail', {'id': app.id}) }}" class="btn btn-sm btn-outline-success">
                                                                <i class="fas fa-eye"></i> View
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                            {% if not hasAccepted %}
                                                <tr>
                                                    <td colspan="4" class="text-center text-muted">No accepted applications</td>
                                                </tr>
                                            {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <!-- Rejected Applications -->
                            <div id="rejected" class="tab-pane fade">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Job Title</th>
                                                <th>Company</th>
                                                <th>Reviewed</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% set hasRejected = false %}
                                            {% for app in applications %}
                                                {% if app.isRejected() %}
                                                    {% set hasRejected = true %}
                                                    <tr class="table-danger">
                                                        <td><strong>{{ app.job.title }}</strong></td>
                                                        <td>{{ app.job.company }}</td>
                                                        <td>{{ app.reviewedAt|date('M d, Y') }}</td>
                                                        <td>
                                                            <a href="{{ path('app_application_detail', {'id': app.id}) }}" class="btn btn-sm btn-outline-danger">
                                                                <i class="fas fa-eye"></i> View
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                            {% if not hasRejected %}
                                                <tr>
                                                    <td colspan="4" class="text-center text-muted">No rejected applications</td>
                                                </tr>
                                            {% endif %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> You haven't applied for any jobs yet.
                            <a href="{{ path('app_jobs_index') }}">Browse available jobs</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
