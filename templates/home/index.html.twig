{% extends "base.html.twig" %}

{% block title %}Home - JobEntry{% endblock %}

{% block content %}
        <!-- Carousel Start -->
        <div class="container-fluid p-0">
            <div class="owl-carousel header-carousel position-relative">
                <div class="owl-carousel-item position-relative">
                    <img class="img-fluid" src="{{ asset('img/carousel-1.jpg') }}" alt="">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(43, 57, 64, .5);">
                        <div class="container">
                            <div class="row justify-content-start">
                                <div class="col-10 col-lg-8">
                                    <h1 class="display-3 text-white animated slideInDown mb-4">Find The Perfect Job That You Deserved</h1>
                                    <p class="fs-5 fw-medium text-white mb-4 pb-2">Explore thousands of job opportunities with all the information you need. Get hired today!</p>
                                    <a href="{{ path('app_jobs_index') }}" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Search A Job</a>
                                    <a href="{{ path('app_categories_index') }}" class="btn btn-secondary py-md-3 px-md-5 animated slideInRight">Browse Categories</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Carousel End -->

        <!-- Search Start -->
        <div class="container-fluid bg-primary mb-5 wow fadeIn" data-wow-delay="0.1s" style="padding: 35px 0;">
            <div class="container">
                <div class="row g-2">
                    <div class="col-md-10">
                        <div class="row g-2">
                            <div class="col-md-4">
                                <input type="text" class="form-control border-0" placeholder="Keywords">
                            </div>
                            <div class="col-md-4">
                                <select class="form-select border-0">
                                    <option selected>Select Category</option>
                                    {% for category in categories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-dark border-0 w-100">Search</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Search End -->

        <!-- Category Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="mb-5 wow fadeInUp" data-wow-delay="0.1s">Browse by Category</h1>
                <div class="row g-4">
                    {% for category in categories %}
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                        <a class="cat-item d-block bg-image h-100 rounded p-4" href="{{ path('app_categories_show', { id: category.id }) }}">
                            <h6 class="mb-3">{{ category.name }}</h6>
                            <small>{{ category.jobs|length }} Jobs</small>
                        </a>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <!-- Category End -->

        <!-- Featured Job Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <h1 class="mb-5 wow fadeInUp" data-wow-delay="0.1s">Featured Jobs</h1>
                <div class="row g-4">
                    {% for job in jobs %}
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="job-item p-4 mb-4">
                            <div class="row g-4">
                                <div class="col-sm-12 col-md-8 d-flex align-items-center">
                                    <div class="text-start ps-4">
                                        <h5 class="mb-3">{{ job.title }}</h5>
                                        <span class="text-truncate me-3"><i class="fa fa-map-marker-alt text-primary me-2"></i>{{ job.location }}</span>
                                        <span class="text-truncate"><i class="far fa-clock text-primary me-2"></i>{{ job.jobType }}</span>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                    <div class="d-flex mb-3">
                                        <a class="btn btn-light btn-square me-3" href="{{ path('app_jobs_show', { id: job.id }) }}"><i class="far fa-heart text-primary"></i></a>
                                        <a class="btn btn-primary" href="{{ path('app_jobs_show', { id: job.id }) }}">Apply Now</a>
                                    </div>
                                    <small class="text-success">{{ job.company }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <a href="{{ path('app_jobs_index') }}" class="btn btn-primary py-3 px-5 mt-4">Browse More Jobs<i class="fa fa-arrow-right ms-3"></i></a>
            </div>
        </div>
        <!-- Featured Job End -->

        <!-- Testimonial Start -->
        <div class="container-xxl py-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container">
                <h1 class="mb-5">Success Stories</h1>
                <div class="owl-carousel testimonial-carousel position-relative">
                    <div class="testimonial-item text-center">
                        <img class="img-fluid bg-light rounded-circle p-2 mx-auto mb-4" src="{{ asset('img/testimonial-1.jpg') }}" style="width: 100px; height: 100px;">
                        <div class="testimonial-text rounded mb-4 p-4">
                            <p class="mb-0">Tempor erat dolor sadipscing labore amet clita clita inert erat sed sit dolor duo.</p>
                        </div>
                        <h6 class="mb-0">Person Name</h6>
                        <small>Profession</small>
                    </div>
                </div>
            </div>
        </div>
        <!-- Testimonial End -->
{% endblock %}
