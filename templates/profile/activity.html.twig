{% extends 'base.html.twig' %}

{% block title %}Activity Log - Job Portal{% endblock %}

{% block content %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 offset-lg-1">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-history"></i> Your Activity Log
                    </h5>
                </div>
                <div class="card-body">
                    {% if activities|length > 0 %}
                        <div class="timeline">
                            {% for activity in activities %}
                                <div class="timeline-item mb-4 pb-4" style="border-left: 3px solid #007bff; padding-left: 20px;">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">
                                                <i class="fas fa-circle" style="color: #007bff; font-size: 8px;"></i>
                                                {{ activity.actionLabel }}
                                            </h6>
                                            {% if activity.description %}
                                                <p class="mb-1 text-muted">{{ activity.description }}</p>
                                            {% endif %}
                                            {% if activity.ipAddress %}
                                                <small class="text-secondary">
                                                    <i class="fas fa-globe"></i> IP: {{ activity.ipAddress }}
                                                </small>
                                            {% endif %}
                                        </div>
                                        <small class="text-muted whitespace-nowrap">
                                            <i class="fas fa-clock"></i> {{ activity.createdAt|date('M d, Y H:i') }}
                                        </small>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info" role="alert">
                            <i class="fas fa-info-circle"></i> No activity recorded yet.
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="mt-4">
                <a href="{{ path('app_profile_view') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.timeline-item:last-child {
    border-left-color: transparent !important;
    padding-bottom: 0 !important;
}

.timeline-item:hover {
    background-color: #f8f9fa;
    margin-left: -5px;
    padding-left: 25px;
    transition: all 0.3s ease;
}
</style>
{% endblock %}
