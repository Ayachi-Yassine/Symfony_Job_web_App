{% extends "base.html.twig" %}

{% block title %}Edit Category - Admin{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Edit Category</h1>

            {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-warning'}}) }}
                    <a href="{{ path('app_admin_categories') }}" class="btn btn-secondary">Cancel</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
