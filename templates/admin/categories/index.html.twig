{% extends "base.html.twig" %}

{% block title %}Manage Categories - Admin{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Manage Categories</h1>
                <a href="{{ path('app_admin_category_create') }}" class="btn btn-primary">+ Add New Category</a>
            </div>
        </div>
    </div>

    {% if categories %}
        <div class="card">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td>{{ category.id }}</td>
                                <td><strong>{{ category.name }}</strong></td>
                                <td>{{ category.description|slice(0, 50) }}{% if category.description|length > 50 %}...{% endif %}</td>
                                <td>{{ category.createdAt|date('Y-m-d') }}</td>
                                <td>
                                    <a href="{{ path('app_admin_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                                    <form method="POST" action="{{ path('app_admin_category_delete', {id: category.id}) }}" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="alert alert-info">No categories found. <a href="{{ path('app_admin_category_create') }}">Create one</a></div>
    {% endif %}
</div>
{% endblock %}
