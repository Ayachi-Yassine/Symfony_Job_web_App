<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>{% block title %}JobEntry - Job Portal Website{% endblock %}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="{{ asset('img/favicon.ico') }}" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="{{ asset('lib/animate/animate.min.css') }}" rel="stylesheet">
    <link href="{{ asset('lib/owlcarousel/assets/owl.carousel.min.css') }}" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="{{ asset('css/style.css') }}" rel="stylesheet">

    <!-- Dark Mode Stylesheet -->
    <link href="{{ asset('css/dark-mode.css') }}" rel="stylesheet">
</head>

<body>
    <div class="container-fliud bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->

        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
            <a href="{{ path('app_home') }}" class="navbar-brand d-flex align-items-center text-center py-0 px-4 px-lg-5">
                <h1 class="m-0 text-primary">JobEntry</h1>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="{{ path('app_home') }}" class="nav-item nav-link {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}">Home</a>
                    <a href="{{ path('app_about') }}" class="nav-item nav-link {% if app.request.attributes.get('_route') == 'app_about' %}active{% endif %}">About</a>
                    <a href="{{ path('app_jobs_index') }}" class="nav-item nav-link {% if app.request.attributes.get('_route') == 'app_jobs_index' %}active{% endif %}">Job List</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                        <div class="dropdown-menu rounded-0 m-0">
                            <a href="{{ path('app_categories_index') }}" class="dropdown-item">Job Category</a>
                            <a href="{{ path('app_testimonials') }}" class="dropdown-item">Testimonial</a>
                        </div>
                    </div>
                    <a href="{{ path('app_contact') }}" class="nav-item nav-link {% if app.request.attributes.get('_route') == 'app_contact' %}active{% endif %}">Contact</a>

                    {% if app.user %}
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" id="darkModeToggle" title="Toggle Dark Mode">
                                <i class="fas fa-moon moon-icon"></i>
                                <i class="fas fa-sun sun-icon"></i>
                            </a>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="fas fa-bell"></i>
                                {% set unreadCount = 0 %}
                                {% if app.user.notifications is not empty %}
                                    {% for notif in app.user.notifications %}
                                        {% if not notif.isRead %}
                                            {% set unreadCount = unreadCount + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                    {% if unreadCount > 0 %}
                                        <span class="badge bg-danger">{{ unreadCount }}</span>
                                    {% endif %}
                                {% endif %}
                            </a>
                            <div class="dropdown-menu rounded-0 m-0" style="min-width: 300px;">
                                {% if app.user.notifications is not empty %}
                                    {% for notif in app.user.notifications|slice(0, 3) %}
                                        <a href="{{ notif.relatedLink ?? (route_exists('app_notifications') ? path('app_notifications') : '/notifications') }}" class="dropdown-item {% if not notif.isRead %}bg-light{% endif %}">
                                            <small>{{ notif.title }}</small>
                                            <br>
                                            <small class="text-muted">{{ notif.message|slice(0, 40) }}{% if notif.message|length > 40 %}...{% endif %}</small>
                                        </a>
                                    {% endfor %}
                                    <div class="dropdown-divider"></div>
                                    <a href="{{ route_exists('app_notifications') ? path('app_notifications') : '/notifications' }}" class="dropdown-item text-center">
                                        <small>View All Notifications</small>
                                    </a>
                                {% else %}
                                    <a href="{{ route_exists('app_notifications') ? path('app_notifications') : '/notifications' }}" class="dropdown-item text-center text-muted">
                                        <small>No notifications</small>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">{{ app.user.email }}</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="{{ route_exists('app_profile_view') ? path('app_profile_view') : '/profile' }}" class="dropdown-item">
                                    <i class="fas fa-user"></i> My Profile
                                </a>
                                <a href="{{ route_exists('app_user_applications') ? path('app_user_applications') : '/jobs/applications' }}" class="dropdown-item">
                                    <i class="fas fa-file-alt"></i> My Applications
                                </a>
                                <a href="{{ route_exists('app_profile_activity') ? path('app_profile_activity') : '/profile/activity' }}" class="dropdown-item">
                                    <i class="fas fa-history"></i> Activity Log
                                </a>
                                {% if 'ROLE_ADMIN' in app.user.roles %}
                                    <div class="dropdown-divider"></div>
                                    <a href="{{ path('app_admin_dashboard') }}" class="dropdown-item">
                                        <i class="fas fa-tachometer-alt"></i> Admin Panel
                                    </a>
                                    <a href="{{ path('app_admin_applications') }}" class="dropdown-item">
                                        <i class="fas fa-file-alt"></i> Applications
                                    </a>
                                    <a href="{{ path('app_admin_activities') }}" class="dropdown-item">
                                        <i class="fas fa-history"></i> User Activities
                                    </a>
                                {% endif %}
                                <div class="dropdown-divider"></div>
                                <a href="{{ path('app_logout') }}" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" id="darkModeToggle" title="Toggle Dark Mode">
                                <i class="fas fa-moon moon-icon"></i>
                                <i class="fas fa-sun sun-icon"></i>
                            </a>
                        </div>
                        <a href="{{ path('app_login') }}" class="nav-item nav-link">Login</a>
                        <a href="{{ path('app_register') }}" class="nav-item nav-link">Register</a>
                    {% endif %}
                </div>
                <a href="{{ path('app_jobs_index') }}" class="btn btn-primary rounded-0 py-4 px-lg-5 d-none d-lg-block">Browse Jobs<i class="fa fa-arrow-right ms-3"></i></a>
            </div>
        </nav>
        <!-- Navbar End -->

        <!-- Content -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% block content %}{% endblock %}

        <!-- Footer Start -->
        <div class="container-fluid bg-dark text-white mt-5 wow fadeInUp" data-wow-delay="0.1s">
            <div class="container py-5">
                <div class="row g-5">
                    <div class="col-lg-3 col-md-6">
                        <h2 class="d-inline-block text-primary mb-4">JobEntry</h2>
                        <p>Discover your dream job with JobEntry. Browse thousands of job listings from top companies.</p>
                        <div class="d-flex pt-2">
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-twitter"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-facebook-f"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-youtube"></i></a>
                            <a class="btn btn-outline-light btn-social" href=""><i class="fab fa-linkedin-in"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="mb-4">Quick Links</h5>
                        <a class="btn btn-link" href="{{ path('app_home') }}">Home</a>
                        <a class="btn btn-link" href="{{ path('app_about') }}">About</a>
                        <a class="btn btn-link" href="{{ path('app_jobs_index') }}">Jobs</a>
                        <a class="btn btn-link" href="{{ path('app_contact') }}">Contact</a>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="mb-4">Job Categories</h5>
                        {% if categories is defined and categories %}
                            {% for category in categories %}
                                <a class="btn btn-link" href="{{ path('app_categories_show', { id: category.id }) }}">{{ category.name }}</a>
                            {% endfor %}
                        {% else %}
                            <p class="text-muted">Browse job categories in our Job Category section</p>
                        {% endif %}
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h5 class="mb-4">Contact Us</h5>
                        <p><i class="fa fa-map-marker-alt me-2"></i>Your Address Here</p>
                        <p><i class="fa fa-phone-alt me-2"></i>+1 234 567 8900</p>
                        <p><i class="fa fa-envelope me-2"></i>info@jobentry.com</p>
                    </div>
                </div>
            </div>
            <div class="container-fluid text-center text-white p-4" style="background: rgba(15, 23, 32, .8);">
                <p class="m-0">&copy; 2024 JobEntry. All rights reserved.</p>
            </div>
        </div>
        <!-- Footer End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="{{ asset('lib/wow/wow.min.js') }}"></script>
    <script src="{{ asset('lib/easing/easing.min.js') }}"></script>
    <script src="{{ asset('lib/waypoints/waypoints.min.js') }}"></script>
    <script src="{{ asset('lib/owlcarousel/owl.carousel.min.js') }}"></script>

    <!-- Template Javascript -->
    <script src="{{ asset('js/main.js') }}"></script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
